<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/drawable_color_gradient"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingTop="10dp"
        android:paddingHorizontal="20dp"
        android:background="@color/colorSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/setting"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        android:background="@drawable/background_top_round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/background_line"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="12dp"
            android:layout_marginHorizontal="10dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:id="@+id/reloadSongSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/baseline_refresh_24"
                    android:contentDescription="@string/todo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingHorizontal="15dp"
                    android:text="@string/reload_songs"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/theme_color"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="10dp"/>

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingBottom="5dp"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/subScrollView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#F44336"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#E91E63"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#9C27B0"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#673AB7"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#3F51B5"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#2196F3"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#03A9F4"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#00BCD4"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#009688"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#4CAF50"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#8BC34A"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#CDDC39"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#FFEB3B"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#FFC107"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#FF9800"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="1dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#FF5722"/>

            </LinearLayout>

        </HorizontalScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:layout_margin="5dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingHorizontal="15dp"
                android:text="@string/refresh_list_in_splash"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchListRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp"
            android:layout_margin="5dp"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_weight="1"
                android:paddingHorizontal="15dp"
                android:text="Show Info Before Play"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchDirectPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>

        </LinearLayout>



    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>