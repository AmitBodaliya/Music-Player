<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"/>

    <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
        android:id="@+id/recyclerViewAllSOng"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:fastScrollAutoHide="false"
        app:fastScrollPopupBgColor="?colorPrimary"
        app:fastScrollThumbColor="?colorPrimary"
        app:fastScrollPopupTextColor="?colorOnPrimary"
        app:fastScrollThumbEnabled="true"
        app:fastScrollThumbInactiveColor="?colorPrimary" />

</FrameLayout>