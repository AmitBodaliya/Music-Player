<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SoundApp" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Dynamic Colors -->
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
        <item name="colorPrimaryContainer">?attr/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">?attr/colorOnPrimaryContainer</item>

        <item name="colorSecondary">?attr/colorSecondary</item>
        <item name="colorOnSecondary">?attr/colorOnSecondary</item>

        <!-- Surface & Background -->
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorSurfaceContainer">?attr/colorSurfaceContainer</item>
        <item name="colorSurfaceContainerLow">?attr/colorSurfaceContainerLow</item>
        <item name="colorSurfaceContainerHigh">?attr/colorSurfaceContainerHigh</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>

        <!-- Set status and navigation bar colors -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurfaceContainer</item>

        <!-- Light or dark icons based on the background -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <item name="android:windowFullscreen">false</item>

        <!-- Text Color -->
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>

        <!-- Icon-->
        <item name="android:colorControlNormal">?attr/colorOnSurface</item>

        <!-- Accent Color (Legacy) -->
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="android:colorAccent">?attr/colorSecondary</item>

    </style>
</resources>
